{% extends 'base.html.twig' %}

{% block title %}Modifier mon annonce{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="mb-4">
                <a href="{{ path('app_user_annonces') }}" class="btn btn-outline-secondary btn-sm">
                    <i class="bi bi-arrow-left"></i> Retour à mes annonces
                </a>
            </div>

            <div class="card shadow-sm">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">
                        <i class="bi bi-pencil-square"></i> Modifier mon annonce
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning mb-4" role="alert">
                        <i class="bi bi-exclamation-triangle"></i>
                        <strong>Attention :</strong> Toute modification de votre annonce nécessitera une nouvelle validation par un modérateur. 
                        Votre annonce sera temporairement invisible jusqu'à validation.
                    </div>

                    {# Composant React pour le formulaire d'édition #}
                    <div {{ react_component('AnnonceEdit', { 
                        id: annonce.id.toRfc4122
                    }) }}></div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
